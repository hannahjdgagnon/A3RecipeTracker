<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<!--head section-->
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Recipe</title>
  <!--css-->
  <link rel="stylesheet" href="/css/edit.css">
</head>

<!--body section-->
<body>
  <header>
    <h1>Edit Recipe</h1>
  </header>

<!-- edit recipe that was selected-->
  <section id="recipe-form">
    <h2>Edit Recipe</h2>
    <form action="/update/<%= recipe._id %>" method="post">
    <!-- title/name of recipe-->
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="<%= recipe.title %>" required>
    <!--ingredients for recipe-->
      <label for="ingredients">Ingredients:</label>
      <textarea id="ingredients" name="ingredients" required><%= recipe.ingredients %></textarea>
    <!--description / info for recipe-->
      <label for="instructions">Instructions/Description:</label>
      <textarea id="instructions" name="instructions" required><%= recipe.instructions %></textarea>
    <!--submit button-->
      <button type="submit">Update Recipe</button>
    </form>
  </section>
</body>
</html>
